        <tr>
            <th>Class Id</th>
            <th>Class Name</th>
            <th>Students</th>
            <th>Teacher Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts{
    <script src="~/js/home.js" asp-append-version="true"></script>
}
