@{
    ViewData["Title"] = ViewBag.Title;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row form-group">
        <div class="col-4">
            <label>Course</label>
            <select  class="selectpicker" id="CourseId" onchange="home.search()">
            </select>
        </div>
        <div class="col-4">
            <label>Grade</label>
            <select class="selectpicker" id="GradeId" onchange="home.search()">
            </select>
        </div>

    </div>
</div>


